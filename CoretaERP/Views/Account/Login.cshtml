@model CoretaERP.Application.ViewModels.Account.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Login - Coreta ERP</title>

    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(135deg, #0f2f35, #2c5364);
            font-family: 'Segoe UI', sans-serif;
        }

        .login-container {
            width: 380px;
            padding: 40px;
            border-radius: 20px;
            background: rgba(255, 255, 255, 0.08);
            backdrop-filter: blur(15px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
            color: white;
        }

        .login-title {
            text-align: center;
            margin-bottom: 5px;
            font-size: 28px;
            font-weight: 600;
        }

        .login-subtitle {
            text-align: center;
            font-size: 14px;
            margin-bottom: 30px;
            opacity: 0.8;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .input-field {
            width: 100%;
            padding: 12px 15px;
            border-radius: 10px;
            border: none;
            outline: none;
            font-size: 14px;
            background: rgba(255,255,255,0.2);
            color: white;
        }

            .input-field::placeholder {
                color: rgba(255,255,255,0.7);
            }

        .login-btn {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 12px;
            background: linear-gradient(90deg, #3CB371, #2E8B57);
            color: white;
            font-weight: 600;
            cursor: pointer;
            transition: 0.3s ease;
        }

            .login-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(60, 179, 113, 0.4);
            }

        .validation {
            margin-top: 15px;
            color: #ff6b6b;
            font-size: 13px;
        }
    </style>
</head>

<body>

    <div class="login-container">
        <div class="login-title">Coreta ERP</div>
        <div class="login-subtitle">Sistema Empresarial</div>

        <form asp-action="Login" method="post">

            <div class="form-group">
                <input asp-for="Email"
                       class="input-field"
                       placeholder="Correo electrónico" />
            </div>

            <div class="form-group">
                <input asp-for="Password"
                       type="password"
                       class="input-field"
                       placeholder="Contraseña" />
            </div>

            <button type="submit" class="login-btn">
                Iniciar Sesión
            </button>

            <div asp-validation-summary="All" class="validation"></div>

        </form>
    </div>

</body>
</html>
