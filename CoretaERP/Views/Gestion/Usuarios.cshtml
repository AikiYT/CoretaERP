@using CoretaERP.Application.ViewModels.Gestion
@model UsuariosViewModel

@{
    ViewData["Title"] = "Gestión de Usuarios";
}
<div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:15px;">
    <h2>Gestión de Usuarios</h2>

    <a asp-controller="Gestion"
       asp-action="Roles"
       style="padding:6px 12px;
              background:#1F2937;
              color:white;
              border-radius:20px;
              text-decoration:none;
              font-size:13px;">
        ⚙ Gestionar Roles
    </a>
</div>

<style>

    /* Fondo general del módulo */
    body {
        background-color: #f4f6f9;
    }

    /* Títulos */
    h2, h4 {
        font-weight: 600;
        color: #1f2937;
    }

    /* Tarjeta del formulario */
    form {
        background: white;
        padding: 25px;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.05);
        max-width: 500px;
        margin-bottom: 30px;
    }

    /* Inputs y Select */
    .form-control {
        border-radius: 10px !important;
        border: 1px solid #e5e7eb;
        padding: 8px 12px;
        transition: all 0.2s ease-in-out;
    }

        .form-control:focus {
            border-color: #3CB371;
            box-shadow: 0 0 0 3px rgba(60,179,113,0.15);
        }

    /* Botón principal */
    .btn-primary {
        background-color: #3CB371 !important;
        border: none !important;
        border-radius: 10px;
        padding: 8px 18px;
        font-weight: 500;
        transition: 0.2s;
    }

        .btn-primary:hover {
            background-color: #2e8b57 !important;
            transform: translateY(-1px);
        }

    /* Tabla */
    table {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 8px 20px rgba(0,0,0,0.05);
    }

    thead {
        background-color: #1f2937;
        color: white;
    }

    th {
        padding: 12px !important;
        font-weight: 500;
    }

    td {
        padding: 12px !important;
        vertical-align: middle !important;
    }

    tbody tr:hover {
        background-color: #f9fafb;
        transition: 0.2s;
    }

    /* Separador */
    hr {
        border-top: 1px solid #e5e7eb;
        margin: 30px 0;
    }

</style>

<h2>Crear Usuario</h2>

<form asp-action="CreateUser" method="post">

    <div class="mb-3">
        <label asp-for="NuevoUsuario.Nombre"></label>
        <input asp-for="NuevoUsuario.Nombre" class="form-control" />
        <span asp-validation-for="NuevoUsuario.Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NuevoUsuario.Email"></label>
        <input asp-for="NuevoUsuario.Email" class="form-control" />
        <span asp-validation-for="NuevoUsuario.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NuevoUsuario.Password"></label>
        <input asp-for="NuevoUsuario.Password" class="form-control" type="password" />
        <span asp-validation-for="NuevoUsuario.Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NuevoUsuario.Rol"></label>
        <select asp-for="NuevoUsuario.Rol" class="form-control">
            <option value="">Seleccione un rol</option>
            @foreach (var rol in ViewBag.Roles)
            {
                <option value="@rol.Nombre">@rol.Nombre</option>
            }
        </select>
        <span asp-validation-for="NuevoUsuario.Rol" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        Crear Usuario
    </button>

</form>

<hr />

<h4>Usuarios Registrados</h4>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Rol</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Usuarios)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Rol</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
