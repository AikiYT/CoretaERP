@using CoretaERP.Application.ViewModels.Gestion
@model UsuariosViewModel

@{
    ViewData["Title"] = "Gestión de Usuarios";
}
<div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:15px;">
    <h2>Gestión de Usuarios</h2>

    <a asp-controller="Gestion"
       asp-action="Roles"
       style="padding:6px 12px;
              background:#1F2937;
              color:white;
              border-radius:20px;
              text-decoration:none;
              font-size:13px;">
        ⚙ Gestionar Roles
    </a>
</div>

<h2>Crear Usuario</h2>

<form asp-action="CreateUser" method="post">

    <div class="mb-3">
        <label asp-for="NuevoUsuario.Nombre"></label>
        <input asp-for="NuevoUsuario.Nombre" class="form-control" />
        <span asp-validation-for="NuevoUsuario.Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NuevoUsuario.Email"></label>
        <input asp-for="NuevoUsuario.Email" class="form-control" />
        <span asp-validation-for="NuevoUsuario.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NuevoUsuario.Password"></label>
        <input asp-for="NuevoUsuario.Password" class="form-control" type="password" />
        <span asp-validation-for="NuevoUsuario.Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NuevoUsuario.Rol"></label>
        <select asp-for="NuevoUsuario.Rol" class="form-control">
            <option value="">Seleccione un rol</option>
            @foreach (var rol in ViewBag.Roles)
            {
                <option value="@rol.Nombre">@rol.Nombre</option>
            }
        </select>
        <span asp-validation-for="NuevoUsuario.Rol" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        Crear Usuario
    </button>

</form>

<hr />

<h4>Usuarios Registrados</h4>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Rol</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Usuarios)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Rol</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
