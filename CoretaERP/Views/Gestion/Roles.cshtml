@model List<CoretaERP.Application.ViewModels.Gestion.RoleViewModel>

@{
    ViewData["Title"] = "Gestión de Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    body {
        background-color: #f4f6f9;
    }

    h2 {
        font-weight: 600;
        color: #1f2937;
        margin-bottom: 20px;
    }

    /* Card del formulario */
    form {
        background: white;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.05);
        max-width: 400px;
    }

    /* Input */
    .form-control {
        border-radius: 10px !important;
        border: 1px solid #e5e7eb;
        padding: 8px 12px;
        transition: 0.2s;
    }

        .form-control:focus {
            border-color: #3CB371;
            box-shadow: 0 0 0 3px rgba(60,179,113,0.15);
        }

    /* Botón crear */
    .btn-primary {
        background-color: #3CB371 !important;
        border: none !important;
        border-radius: 10px;
        padding: 6px 16px;
        font-weight: 500;
        transition: 0.2s;
    }

        .btn-primary:hover {
            background-color: #2e8b57 !important;
            transform: translateY(-1px);
        }

    /* Tabla */
    table {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 8px 20px rgba(0,0,0,0.05);
    }

    thead {
        background-color: #1f2937;
        color: white;
    }

    th {
        padding: 12px !important;
        font-weight: 500;
    }

    td {
        padding: 12px !important;
        vertical-align: middle !important;
    }

    tbody tr:hover {
        background-color: #f9fafb;
        transition: 0.2s;
    }

    /* Botón eliminar */
    .btn-danger {
        border-radius: 8px;
        padding: 4px 10px;
        font-size: 12px;
        transition: 0.2s;
    }

        .btn-danger:hover {
            transform: scale(1.05);
        }

</style>

<h2>Gestión de Roles</h2>

<form asp-action="CreateRole" method="post">
    <input name="nombre" class="form-control" placeholder="Nuevo Rol" />
    <button class="btn btn-primary mt-2">Crear Rol</button>
</form>

<table class="table mt-4">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Nombre</td>
                <td>
                    <a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-danger btn-sm">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

